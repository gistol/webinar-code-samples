<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Pimcore 5 - Controllers + Routing Webinar</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/pimcore/static6/img/favicon/favicon-32x32.png" />
</head>
<body>

<div class="container" style="margin-top: 50px; margin-bottom: 50px">
    <div class="row">
        <div class="col">
            {% block content %}{% endblock %}
        </div>
    </div>

    <div class="row mt-5">
        {% set types = {
            staticroute: 'Static Route',
            config: 'Configuration File',
            annotation: 'Annotation'
        } %}

        <div class="col">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Document</h4>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="/document/info" class="card-link">Info</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/document/hello?name=Webinar" class="card-link">Hello</a>
                        </li>
                        <li class="list-group-item">
                            <a href="/document/request-info?foo=bar" class="card-link">Request Info (defined as service)</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {% for type, title in types %}

            <div class="col">
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">{{ title }}</h4>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <a href="{{ path(type ~ '_info') }}" class="card-link">Info</a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{ path(type ~ '_hello', { name: 'Webinar' }) }}" class="card-link">Hello</a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{ path(type ~ '_request_info', { foo: 'bar' }) }}" class="card-link">Request Info (defined as service)</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
</div>

</body>
</html>
